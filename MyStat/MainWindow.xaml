                <TextBlock Width="Auto" FontSize="20" Margin="40 20 0 0">1471
                    <Image Height="20" Margin="-3" Source="star.png"/>
                </TextBlock>
                <Expander HorizontalAlignment="Right" DockPanel.Dock="Right" Width="50" Height="40" Margin="0 20 50 0" Header="Ua" FontSize="20"></Expander>
                <TextBlock Width="100" Height="Auto" FontSize="20" Margin="50 0 0 0" HorizontalAlignment="Left">999
                    <Image Source="christal.png" HorizontalAlignment="Left" Height="20" Margin="10 28 0 -5"></Image>
                </TextBlock>
                <TextBlock Width="100" Height="Auto" FontSize="20" HorizontalAlignment="Left" Margin="0 0 0 0">999
                    <Image Source="coin.png" HorizontalAlignment="Left" Height="20" Margin="10 28 0 -4"></Image>
                </TextBlock>
                <TextBlock Width="100" Height="Auto" FontSize="20" HorizontalAlignment="Left" Margin="0 0 0 0">999
                    <Image Source="badge.png" HorizontalAlignment="Left" Height="20" Margin="10 28 0 -4"></Image>
                </TextBlock>
                
            </DockPanel>
        </Grid>
        
    </Grid>
</Window>
